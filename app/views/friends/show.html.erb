<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead"><%= @friend.last_name %>  |  <%= @friend.phone %>  |  <%= @friend.twitter %></p>
  <hr class="my-4">
  <p class="lead">
    <div>
      <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
      <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
      <%= link_to "Destroy this friend", @friend, data: {turbo_method: :delete},  class:"btn btn-outline-danger" %>
    </div>
  </p>
  <br/>
</div>
